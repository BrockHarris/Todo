<div class="page_container">
	<div class="panel panel-default">
	  <div class="panel-heading">
	    <h3 class="panel-title">My To-do List</h3>
	  </div>

	  <div class="panel-body">
	  	<div class="row">
		    <%= form_for @todo, :html=> { :multipart => true} do |f| %>
		    	<div class="col-xs-10"><%= f.text_field :title, :class => "form-control", :placeholder => "I need to..." %></div>
          <div class="col-xs-2"><%= f.submit 'Save', :class => "btn btn-success pull-right" %></div>
        <% end %>
      </div>
      <hr>
      </div>
      <ul class="list-group">
      	
		   	<%= render @completed_todos %>
		  </ul>
	  
	</div>
</div>